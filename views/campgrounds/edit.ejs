<%- include("../partials/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit <%= campground.name %></h1>
        </div>

        <div class="col-md-4 col-sm-12">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>"  min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[desc]" value="<%= campground.desc %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary">Submit!</button>
                </div>
            </form>

            <a href="/campgrounds/<%= campground._id %>">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>